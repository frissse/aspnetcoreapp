@model IEnumerable<PM.BL.Domain.Episode>


@{
    ViewBag.Title = "All Episodes";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional: Set the layout page

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/site.css"/>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
    <h2>@ViewBag.Title</h2>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Episode Number</th>
            <th>Episode Title</th>
            <th>Duration</th>
            <th>Category</th>
            <th>Listeners</th>
            <th>Details</th>
        </tr>
        @foreach (PM.BL.Domain.Episode episode in Model)
        {
            <tr>
                <td>@episode.Id</td>
                <td>@episode.EpisodeNumber</td>
                <td>@episode.EpisodeTitle</td>
                <td>@(episode.Duration?.ToString() ?? "unknown")</td>
                <td>@episode.Category</td>
                <td>@episode.Listeners</td>
                <td>
                    <a href="@Url.Action("Details", "Episode", new { id = episode.Id })">Details</a>
                </td>
            </tr>
        }
    </table>

</div>
</body>
</html>